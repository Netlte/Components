<i class="{$prefix}{$icon} bg-{$color}"></i>

<div class="timeline-item">
	<span n:if="$title !== NULL" class="time"><i class="fa fa-clock-o"></i> {$datetime->format('H:i')}</span>

	<h3 n:if="$title !== NULL" class="timeline-header">{$title}</h3>
	<div n:if="$control->getComponents()->count()"
			class="timeline-body" n:inner-foreach="$control->getComponents() as $c">
		{control $c}
	</div>

	{*
	<div class="timeline-footer">
		<a class="btn btn-primary btn-xs">...</a>
	</div>
	*}
</div>